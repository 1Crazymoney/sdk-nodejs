{
  "extends": [
    "airbnb-base/legacy"
  ],
  "rules": {
    "max-len": ["warn", 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "no-param-reassign": ["error", { "props": false }],
    "class-methods-use-this": "off"
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
