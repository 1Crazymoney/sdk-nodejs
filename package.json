{
  "name": "mercadopago",
  "version": "2.0.0",
  "description": "Mercadopago SDK for Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --build tsconfig.prod.json && tsc-alias -p tsconfig.json",
    "dev": "nodemon -x \"npm run build\"",
    "test": "jest",
    "lint": "eslint 'src/**/*.{ts,tsx}' --cache",
    "lint:fix": "eslint --fix --ext .ts src",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercadopago/sdk-nodejs.git"
  },
  "keywords": [
    "api",
    "mercadopago",
    "checkout",
    "payment",
    "ipn",
    "sdk",
    "integration"
  ],
  "author": "Mercado Pago (https://www.mercadopago.com/developers/en)",
  "bugs": {
    "url": "https://github.com/mercadopago/sdk-nodejs/issues"
  },
  "homepage": "https://github.com/mercadopago/sdk-nodejs#readme",
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "@types/node-fetch": "^2.6.4",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6",
    "husky": "^8.0.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "node-fetch": "^2.6.12"
  }
